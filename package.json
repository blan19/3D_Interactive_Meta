{
  "name": "3im",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev:server": "turbo run dev --scope=\"@heartplace/server\"",
    "dev:client": "turbo run dev --scope=\"@heartplace/client\"",
    "dev": "turbo run dev --scope=\"@heartplace/client\"",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@3im/config": "workspace:*",
    "@3im/tsconfig": "workspace:*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
